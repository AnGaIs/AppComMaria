<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.umservodemaria.appcommaria.ui.activity.AboutActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_marginLeft="80dp"
            android:layout_gravity="center"
            android:src="@drawable/mariainia" />

    </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">
        <TextView
            android:id="@+id/tex1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Um Servo De Maria"
            android:textColor="#87a0e5"
            android:textAlignment="center"
            android:textSize="22dp" />
        <TextView
            android:id="@+id/usdm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:text="Com Maria"
            android:textAlignment="center"
            android:textColor="#87a0e5"
            android:textSize="18dp" />

            <TextView
                android:id="@+id/desen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="30dp"
                android:text="Desenvolvido para a evangelização."
                android:textAlignment="center"
                android:textColor="#bcbbbb"
                android:textSize="16dp" />

    </LinearLayout>

    <ScrollView
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/border_line_buttom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="45dp">
                    <ImageView
                        app:srcCompat="@drawable/ic_email_ic"
                        android:tint="#fc5555"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="55dp">
                    <TextView
                        android:id="@+id/email0"
                        android:textColor="#fc5555"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="E-mail:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/email1"
                        android:onClick="BrowseEmail"
                        android:textColor="#fc5555"
                        android:textSize="14sp"
                        android:text="@string/app_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/border_line_buttom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="45dp">
                    <ImageView
                        app:srcCompat="@drawable/ic_public"
                        android:tint="#737171"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/site0"
                        android:textColor="#737171"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Web Site:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/site1"
                        android:onClick="Browse"
                        android:textColor="#737171"
                        android:textSize="14sp"
                        android:text="@string/app_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/border_line_buttom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="45dp">
                    <ImageView
                        app:srcCompat="@drawable/ic_facebook"
                        android:tint="#5597fc"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/face0"
                        android:textColor="#5597fc"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Facebook:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/face1"
                        android:textColor="#5597fc"
                        android:textSize="14sp"
                        android:onClick="Browse"
                        android:text="@string/app_facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/border_line_buttom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="45dp">
                    <ImageView
                        app:srcCompat="@drawable/ic_tiwtter"
                        android:tint="#5179fd"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/t0"
                        android:textColor="#5179fd"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Twitter:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/t1"
                        android:onClick="Browse"
                        android:textColor="#5179fd"
                        android:textSize="14sp"
                        android:text="@string/app_twitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/border_line_buttom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="45dp">

                    <ImageView
                        app:srcCompat="@drawable/ic_instagram"
                        android:tint="#ea763c"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView2" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#ea763c"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Instagram:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/insta0" />

                    <TextView
                        android:id="@+id/insta1"
                        android:onClick="Browse"
                        android:textColor="#ea763c"
                        android:textSize="14sp"
                        android:text="@string/app_instagram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
